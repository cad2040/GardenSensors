# Application
APP_NAME=GardenSensors
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=garden_sensors
DB_USERNAME=root
DB_PASSWORD=

# API
API_KEY=your-api-key-here

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug

# Arduino
ARDUINO_PORT=/dev/ttyUSB0
ARDUINO_BAUD_RATE=9600

# Sensor Settings
SENSOR_READ_INTERVAL=300
SENSOR_TIMEOUT=30
SENSOR_RETRY_ATTEMPTS=3

# API Settings
API_RATE_LIMIT=100
API_TOKEN_EXPIRY=3600

# Security
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=garden_sensors_

# Python Settings
PYTHON_PATH=/usr/bin/python3
PYTHON_VENV_PATH=venv

# Database Configuration
DB_NAME=SoilSensors
DB_SERVER=your_mysql_server_ip
DB_USERNAME=your_mysql_username
DB_PASSWORD=your_mysql_password

# FTP Configuration
FTP_ADDRESS=your_ftp_server_ip
FTP_USERNAME=your_ftp_username
FTP_PASSWORD=your_ftp_password

# File Paths
SAVE_DIR=./plots
UPLOAD_PATH=//files//

# Web Configuration
HOST_URL=http://your_host_url/ 