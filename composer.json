{
    "name": "garden-sensors/dashboard",
    "description": "A web-based dashboard for monitoring and managing garden sensors",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^2.9",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "GardenSensors\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GardenSensors\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
}
