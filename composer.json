    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "php-mock/php-mock-phpunit": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "GardenSensors\\": "src/"
        }
    },
    "autoload-dev": {
